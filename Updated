<script>
  // Initial position set from your Coinbase screenshot
  let positions = JSON.parse(localStorage.getItem('gf-portfolio') || '[]');

  if (positions.length === 0) {
    positions = [
      { id: 1, name: 'Ethereum', ticker: 'ETH', invested: 250, entry: 2750.00, current: 2751.45, target: 8000 }
    ];
    save();
  }

  function save() { localStorage.setItem('gf-portfolio', JSON.stringify(positions)); }

  function render() {
    const tbody = document.getElementById('portfolio-body');
    tbody.innerHTML = '';
    let totalInv = 0; let totalCur = 0;

    positions.forEach(p => {
      const coins = p.invested / p.entry;
      const currentVal = coins * p.current;
      totalInv += p.invested;
      totalCur += currentVal;

      const tr = document.createElement('tr');
      tr.innerHTML = `
        <td>${p.name}</td>
        <td>$${p.invested}</td>
        <td><input type="number" value="${p.entry}" onchange="update(${p.id},'entry',this.value)"></td>
        <td><input type="number" value="${p.current}" onchange="update(${p.id},'current',this.value)"></td>
        <td>$${currentVal.toFixed(2)}</td>
        <td style="color:${p.current >= p.entry ? '#27ae60' : '#c0392b'}">${(((p.current-p.entry)/p.entry)*100).toFixed(1)}%</td>
        <td><button onclick="remove(${p.id})" style="color:red; background:none; border:none;">âœ•</button></td>
      `;
      tbody.appendChild(tr);
    });

    document.getElementById('total-invested').textContent = '$' + totalInv.toFixed(2);
    document.getElementById('current-value').textContent = '$' + totalCur.toFixed(2);
    document.getElementById('total-pnl').textContent = '$' + (totalCur - totalInv).toFixed(2);
    let progress = (totalCur / 100000) * 100;
    document.getElementById('progress-fill').style.width = progress + '%';
    document.getElementById('progress-pct').textContent = progress.toFixed(2) + '%';
  }

  function update(id, field, val) {
    const p = positions.find(x => x.id === id);
    if(p) { p[field] = parseFloat(val); save(); render(); }
  }

  function addCoin() {
    const name = prompt("Coin Name?");
    const ticker = prompt("Ticker?");
    const inv = parseFloat(prompt("Amount Invested ($)?"));
    const entry = parseFloat(prompt("Entry Price ($)?"));
    if(name && inv) {
      positions.push({id: Date.now(), name, ticker, invested: inv, entry, current: entry, target: entry*10});
      save(); render();
    }
  }

  function remove(id) { positions = positions.filter(x => x.id !== id); save(); render(); }

  render();
</script>
</body>
